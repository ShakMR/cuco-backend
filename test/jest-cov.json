{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../src",
  "testRegex": [
    ".*\\.test\\.ts$",
    ".*\\.e2e-spec\\.ts$"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "setupFilesAfterEnv": [
    "./__test__/jestGlobalSetup.ts"
  ]
}
