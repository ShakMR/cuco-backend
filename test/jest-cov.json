{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../src",
  "testRegex": [
    ".*\\.test\\.ts$"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "setupFilesAfterEnv": [
    "./__test__/jestGlobalSetup.ts"
  ],
  "coveragePathIgnorePatterns": [
    "e2e",
    "controller",
    "module.ts",
    "dto",
    "main.ts",
    ".filter.ts"
  ]
}
