{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../src",
  "testRegex": [
    ".*\\.e2e-spec\\.ts$"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage-e2e",
  "testEnvironment": "node",
  "coveragePathIgnorePatterns": [
    ".test.ts",
    "__test__",
    "__e2e__",
    "supabase",
    "test"
  ],
  "setupFilesAfterEnv": [
    "./__test__/e2e-setup.ts",
    "./__test__/e2e-teardown.ts"
  ]
}
